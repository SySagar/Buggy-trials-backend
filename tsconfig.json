{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["./api/controllers/*"],
      "@models/*": ["./api/models/*"],
      "@routes/*": ["./api/routes/*"],
      "@services/*": ["./api/services/*"],
      "@middlewares/*": ["./api/middlewares/*"],
      "@repository/*": ["./api/repository/*"],
      "@config/*": ["./config/*"],
      "@utils/*": ["./api/utils/*"],
      "@/*": ["./api/*"]
    }
  },
  "include": ["src/**/*"]
}
